<div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-6">Upload a Book</h1>

  <%= form_with model: @book, class: "space-y-6" do |f| %>
    <% if @book.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded">
        <h3 class="font-bold mb-2"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
        <ul class="list-disc list-inside">
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :file, "EPUB or PDF File", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.file_field :file,
          accept: ".epub,.pdf,application/epub+zip,application/pdf",
          required: true,
          class: "w-full" %>
      <p class="text-sm text-gray-500 mt-1">Upload an EPUB or PDF file. Metadata will be extracted automatically for EPUBs.</p>
    </div>

    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :title,
          class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
      <p class="text-sm text-gray-500 mt-1">Optional - will be auto-filled for EPUBs</p>
    </div>

    <div>
      <%= f.label :author, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :author,
          class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
      <p class="text-sm text-gray-500 mt-1">Optional - will be auto-filled for EPUBs</p>
    </div>

    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :description,
          rows: 4,
          class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex gap-4">
      <%= f.submit "Upload Book",
          class: "bg-blue-600 text-white py-2 px-6 rounded-md hover:bg-blue-700 transition-colors cursor-pointer" %>
      <%= link_to "Cancel", books_path,
          class: "bg-gray-200 text-gray-700 py-2 px-6 rounded-md hover:bg-gray-300 transition-colors" %>
    </div>
  <% end %>
</div>
