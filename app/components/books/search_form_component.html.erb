<%= form_with url: books_path, method: :get, class: "mb-8 bg-white p-6 rounded-lg shadow" do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div>
      <%= f.label :query, "Search", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :query,
          value: @query,
          placeholder: "Search by title or author...",
          class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :type, "Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :type,
          options_for_select([["All", ""], ["EPUB", "epub"], ["PDF", "pdf"]], @type),
          {},
          class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :sort, "Sort by", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :sort,
          options_for_select([["Recently Added", ""], ["Title", "title"], ["Author", "author"]], @sort),
          {},
          class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="mt-4 flex gap-2">
    <%= f.submit "Search", class: "bg-blue-600 text-white py-2 px-6 rounded-md hover:bg-blue-700 cursor-pointer" %>
    <%= link_to "Clear", books_path, class: "bg-gray-200 text-gray-700 py-2 px-6 rounded-md hover:bg-gray-300" %>
  </div>
<% end %>
