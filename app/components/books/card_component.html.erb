<%= link_to book_path(@book), class: "group block bg-white rounded-lg shadow hover:shadow-lg transition-shadow" do %>
  <div class="aspect-[2/3] bg-gray-100 rounded-t-lg overflow-hidden">
    <%= image_tag cover_url,
        alt: @book.display_title,
        class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-200" %>
  </div>

  <div class="p-4">
    <h3 class="font-semibold text-gray-900 line-clamp-2 mb-1">
      <%= @book.display_title %>
    </h3>

    <p class="text-sm text-gray-600 line-clamp-1">
      <%= @book.display_author %>
    </p>

    <div class="mt-2 flex items-center gap-2">
      <span class="text-xs px-2 py-1 rounded <%= @book.epub? ? 'bg-blue-100 text-blue-800' : 'bg-red-100 text-red-800' %>">
        <%= @book.file_type&.upcase %>
      </span>

      <% if @book.file_size %>
        <span class="text-xs text-gray-500">
          <%= number_to_human_size(@book.file_size) %>
        </span>
      <% end %>
    </div>
  </div>
<% end %>
