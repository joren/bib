<div class="bg-white p-8 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-6 text-center">Sign in to Bib</h1>

  <%= form_with url: session_path, method: :post, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email,
          required: true,
          autofocus: true,
          placeholder: "you@example.com",
          class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <%= f.submit "Send me a login link",
        class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors cursor-pointer" %>
  <% end %>

  <p class="text-sm text-gray-600 mt-4 text-center">
    We'll email you a magic link for a password-free sign in.
  </p>
</div>
